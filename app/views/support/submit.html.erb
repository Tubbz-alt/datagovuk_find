<div class="grid-row inner">
  <div class="column-full">

    <div class="datagov_breadcrumb">
      <ol role="breadcrumb">
        <li>
          <%= link_to 'Back', support_path %>
        </li>
      </ol>
    </div>

    <h1 class='heading-large'>
      <% if @support_queue = 'feedback'%>
        Report a problem or give feedback
      <% else %>
        Data request
      <% end %>
    </h1>

    <form action='ticket' method='post'>
      <div class="form-group">
        <label class="form-label" for="textarea">Your message</label>
        <textarea class="form-control form-control-3-4" name="textarea" id="textarea" rows="5"></textarea>
      </div>
      <div class="form-group">
        <label class="form-label" for="user_name">Name</label>
        <input class="form-control form-control-3-4" id="user_name" type="text" name="user_name">
      </div>
      <div class="form-group">
        <label class="form-label" for="email_address">Email address</label>
        <input class="form-control form-control-3-4" id="email_address" type="text" name="email_address">
      </div>
        <input class="button" type="submit" value="Submit">
      </div>
    </form>

  </div>
</div>
