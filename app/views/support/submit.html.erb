<div class="grid-row inner">
  <div class="column-full">

    <div class="datagov_breadcrumb">
      <ol role="breadcrumb">
        <li>
          <%= link_to 'Back', support_path %>
        </li>
      </ol>
    </div>

    <h1 class='heading-large'>
      <% if @support_queue == 'feedback'%>
        Report a problem or give feedback
      <% else %>
        Data request
      <% end %>
    </h1>

    <form action='ticket' method='post'>
      <div class="form-group">
        <label class="form-label" for="content">Your message</label>
        <textarea class="form-control form-control-3-4" name="content" id="content" rows="5"></textarea>
      </div>
      <div class="form-group">
        <label class="form-label" for="name">Name</label>
        <input class="form-control form-control-3-4" id="name" type="text" name="name">
      </div>
      <div class="form-group">
        <label class="form-label" for="email">Email address</label>
        <input class="form-control form-control-3-4" id="email" type="text" name="email">
      </div>
        <input type="hidden" name="support" value="<%=@support_queue%>" >
        <input class="button" type="submit" value="Submit" >
      </div>
    </form>

  </div>
</div>
