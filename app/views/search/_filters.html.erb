<div class="grid-row" id="filters">
  <div class="column-one-third">
    <form>
      <div class="form-group">
        <fieldset>
          <input name="q" type="hidden" class="form-control search" value="<%= @query %>"/>
          <h2 class="heading-medium first-filter">Sort by</h2>
          <legend class="visually-hidden">Sort by</legend>
          <div class="multiple-choice">
            <input id="sortby-best" type="radio" name="sortby" value="best" <%= "checked" if best? || no_sort? %>>
            <label for="sortby-best">Best match</label>
          </div>
          <div class="multiple-choice">
            <input id="sortby-recent" type="radio" name="sortby" value="recent" <%= "checked" if recent? %>>
            <label for="sortby-recent">Most recent</label>
          </div>
          <div class="multiple-choice">
            <input id="sortby-viewed" type="radio" name="sortby" value="viewed" <%= "checked" if viewed? %>>
            <label for="sortby-viewed">Most viewed</label>
          </div>
        </fieldset>
      </div>

      <h2 class="heading-medium">Filter by</h2>

      <label for="location" class="form-label">
        Enter geographical area
      </label>
      <div id="location" name="location" data-default="<%= @location %>" class="filter"></div>

      <label for="publisher" class="form-label">
        Enter publisher
      </label>
      <div id="publisher" name="publisher" data-default="<%= @organisation %>" class="filter"></div>


      <input class="button" type="submit" value="Apply filters"></input>
      <%= link_to 'Reset all filters', search_path(q: @query) %>
    </form>
  </div>
