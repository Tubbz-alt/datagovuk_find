<section class="meta-data">
  <div class="grid-row">
    <section class="data-links">
      <div class="column-two-thirds">
        <h1 class="heading-large">
          <%= @dataset['title'] %>
        </h1>
        <div class="metadata-box">
          <dl class="metadata">
            <dt>Published by:</dt>
            <dd><a href="#"><%= @dataset["organisation"]["title"] %> </a></dd>
            <dt>Last updated:</dt>
            <dd><%= format(@dataset["updated_at"]) %></dd>
            <dt>Expected update:</dt> <%= expected_update %>
            <dt>Geographical area:</dt> <%= dataset_location %>
          </dl>

          <h3 class="heading-small">
            Summary
          </h3>
          <p class="summary" style="max-height: 250px; overflow: hidden"> <%= @dataset["summary"] %> </p>
        </div>
      </div>
      <div class="column-one-third related-datasets">
        <h3 class="heading-small">Related datasets</h3>
        <ul>
          <li><a href="/dataset/dataset_id">related dataset 1</a></li>
        </ul>

        <h3 class="heading-small related">Search UK Government data</h3>
        <form id="search-form" action="/search-results" method="GET" class="top-search">
          <fieldset>
            <div id="search-box">
              <input id="q" name="q" type="text" placeholder="" class="form-control search" autocomplete="off" value=""/>
              <button type="submit" class="search-submit">Find data</button>
            </div>
          </fieldset>
        </form>
        <%= link_to 'Search help', '#' %>
      </div>
    </section>
  </div>
</section>
